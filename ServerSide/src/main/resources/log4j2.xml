<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="path">ServerSide/logs</Property>
    </Properties>
    <Appenders>
        <File name="SYSTEM" fileName="${path}/system.log" append="true">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %F:%L - %m%n"/>
        </File>
        <File name="MESSAGES" fileName="${path}/messages.log" append="true">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %F:%L - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="ru.geekbrains" level="debug">
            <AppenderRef ref="SYSTEM"/>
            </Logger>
        <Logger name="messages" level="debug" additivity="false">
            <AppenderRef ref="MESSAGES"/>
        </Logger>
        <Root level="info" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>